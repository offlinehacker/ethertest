<% my_localnet.each do |local| -%>
<% my_remotenet.each do |remote| -%>
spdadd <%= local %> <%= remote %> any -P out ipsec
	esp/<%= encap %>/<% if encap == "tunnel" -%><%= local_ip %>-<%= peer_ip %><% end -%>/<%= policy_level %>;
spdadd <%= remote %> <%= local %> any -P in ipsec
	esp/<%= encap %>/<% if encap == "tunnel" -%><%= peer_ip %>-<%= local_ip %><% end -%>/<%= policy_level %>;

<% end -%>
<% end -%>
